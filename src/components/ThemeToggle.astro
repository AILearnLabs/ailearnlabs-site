<button id="theme-toggle"
  aria-label="Toggle dark mode"
  class="rounded-md p-2 hover:bg-slate-200 dark:hover:bg-slate-800"
>
  <svg class="h-5 w-5 text-slate-700 dark:text-slate-200" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
  </svg>
</button>

<script type="module">
  const btn = document.getElementById('theme-toggle');
  btn?.addEventListener('click', () => {
    const el = document.documentElement;
    const isDark = el.classList.toggle('dark');
    try { localStorage.setItem('theme', isDark ? 'dark' : 'light'); } catch {}
  });
  
</script>
